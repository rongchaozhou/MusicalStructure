<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/now_playing_outer_background"
    android:padding="@dimen/padding_general">

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/now_playing_background"
            android:padding="@dimen/now_playing_image_padding"
            android:src="@drawable/music_icon" />

        <TextView
            android:id="@+id/now_playing_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/now_playing_text_height"
            android:background="@color/now_playing_background"
            android:gravity="center_horizontal"
            android:text="@string/now_playing_default_text"
            android:textSize="@dimen/now_playing_text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button_play" />

</RelativeLayout>